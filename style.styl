html
	background white
	margin 0
.clear
	clear both
.danger
	color red
.container
	margin-top 30px
.panel-group
	margin 5px 0 0 0 !important
#tableWorkers
	margin-top 30px
.table-hover 
	tbody
		tr
			z-index 1
			position relative
			td
				a
					z-index 3
					position relative	
			&:hover
				td
					cursor pointer
			&.collapseRow
				td
					height 0
					padding 0
			&.collapseRow:hover
				td
					cursor auto
					background-color white
					button
						z-index 2
						position relative								
				th
					cursor auto
					background-color white	
#addNewWorker
	margin-top 30px
.addWorkerTitle
	margin 0 0 20px 20px
.details_reviews
	margin-top 20px
#detailsWorker
#reviewWorker
	max-width 312px
	max-height 300px
.red
	background red
	height 30px
	width 100px
a.showDetails
	cursor pointer
.tags
	margin 10px 0
.dropdown-menu
	position relative !important
	max-height 300px
	overflow auto
.workersTag
	width auto
	height auto
	border-radius 4px
	padding 3px 5px
	margin 10px 5px 5px 0
	a
		cursor pointer
		color white
		&:hover
			color white
		&.removeWorkerFromTag:hover
			text-decoration none

/*validation of adding new team*/		
#addNewTeam
	input.ng-invalid:focus
		border-color red
		box-shadow  0 0 4px red
	input.ng-valid:focus
		border-color green
		box-shadow  0 0 4px green
	.invalid
		display none


